    "Media": {
      "podcast": {
        "type": "Embed",
        "config": {
          "label": "Podcast (Audio)",
          "placeholder": ""
        }
      },
      "video": {
        "type": "Embed",
        "config": {
          "label": "Video",
          "placeholder": ""
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
