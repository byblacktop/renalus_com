        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Post Date",
          "placeholder": "Date of Publication"
        }
